<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.baizhi.dao.BaiZhiPageDAO">

    <select id="queryEnglishByPageName" resultType="java.lang.String">
      SELECT english FROM baizhi_page WHERE pagename = #{pageName}
    </select>

    <select id="queryChineseByPageName" resultType="java.lang.String">
        SELECT chinese FROM baizhi_page WHERE pagename = #{pageName}
    </select>

    <select id="queryGermanByPageName" resultType="java.lang.String">
        SELECT german FROM baizhi_page WHERE pagename = #{pageName}
    </select>

</mapper>
